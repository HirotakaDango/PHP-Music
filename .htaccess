# 1. Prevent direct access to all PHP files except index.php and management.php (in this folder only)
<FilesMatch "^(?!(index|management)\.php$).+\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# 2. Deny access to .htaccess itself
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# 3. Protect the getid3 library if present (optional, for security)
<Directory "getid3">
    Order allow,deny
    Deny from all
</Directory>

# 4. Deny access to the SQLite database file
<Files "music.db">
    Order allow,deny
    Deny from all
</Files>

# 5. Deny access to hidden files (dotfiles)
RedirectMatch 404 /\..*$

# 6. Optional: Prevent directory listing
Options -Indexes
